import axios from 'axios';
import React, { useState, useEffect } from 'react';

function ProductList({ category }) {
    const [products, setProducts] = useState([]);

    useEffect(() => {
        // Fetch product data based on the category (use your API endpoint)
        // For example, you could make a request like axios.get(`your-django-api-url/products?category=${category}`)
        // Update the products state with the fetched data
         axios
           .get("http://127.0.0.1:8000/api/products")
           .then((response) => {
             setProducts(response.data);
           })
           .catch((error) => {
             console.error("Error fetching data:", error);
           });
    }, [category]);

    return (
      <div>
        <h1>Product List for {category}</h1>
        <ul>
          {products.map((product) => (
            <li key={product.id}>{product.category}</li>
          ))}
        </ul>
      </div>
    );
}

export default ProductList;
